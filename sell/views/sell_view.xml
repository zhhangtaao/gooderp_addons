                    <field name="order_id"/>
                    <field name="state"/>
                    <field name="create_uid" string="制单人"/>
                    <field name="approve_uid"/>
                    <filter name="draft" string="草稿" domain="[('state','=','draft')]"/>
                    <filter name="done" string="已确认" domain="[('state','=','done')]"/>
